@model IEnumerable<HotelSunsetParadise.Models.Habitacion>

@{
    ViewBag.Title = "Habitaciones";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Habitaciones</h2>
    <a href="/Habitaciones/Create" class="btn btn-success">+ Agregar Habitación</a>
</div>

<div class="card shadow-lg">
    <div class="card-body">
        <table class="table table-dark table-hover align-middle text-center">
            <thead class="table-secondary text-dark">
                <tr>
                    <th style="width: 10%;">Número</th>
                    <th style="width: 20%;">Tipo</th>
                    <th style="width: 20%;">Precio ($)</th>
                    <th style="width: 20%;">Disponible</th>
                    <th style="width: 20%;">Acciones</th>
                    
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var h in Model)
                    {
                        <tr>
                            <td><strong>@h.Numero</strong></td>
                            <td>@h.Tipo</td>
                            <td>@h.Precio.ToString("F2")</td>
                            <td>
                                @if (h.Disponible)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@h.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                                <form asp-action="Delete" asp-route-id="@h.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('¿Estás seguro de eliminar esta habitación?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-muted">No hay habitaciones registradas.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
