@model IEnumerable<HotelSunsetParadise.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Clientes</h2>
    <a href="/Clientes/Create" class="btn btn-success">+ Agregar Cliente</a>
</div>

<div class="card shadow-lg">
    <div class="card-body">
        <table class="table table-dark table-hover align-middle text-center">
            <thead class="table-secondary text-dark">
                <tr>
                    <th style="width: 30%;">Nombre</th>
                    <th style="width: 20%;">DUI</th>
                    <th style="width: 20%;">Teléfono</th>
                    <th style="width: 30%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td><strong>@c.Nombre</strong></td>
                            <td>@c.DUI</td>
                            <td>@c.Telefono</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm me-2">Editar</a>

                                <form asp-action="Delete" asp-route-id="@c.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('¿Estás seguro de eliminar este cliente?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted">No hay clientes registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
